<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adidas - Shop</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <a href="/" class="logo">
                <img src="/images/adidas-logo.png" alt="Adidas Logo">
            </a>
            <div class="nav-links">
                <a href="/" class="nav-link active">Home</a>
                <a href="/products" class="nav-link">Products</a>
                <a href="/contact" class="nav-link">Contact</a>
            </div>
            <div class="nav-actions">
                <a href="/cart" class="nav-icon"><i class="fas fa-shopping-cart"></i></a>
                <a href="/account" class="nav-icon"><i class="fas fa-user"></i></a>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <header class="hero">
        <div class="hero-content">
            <h1>Impossible Is Nothing</h1>
            <p>Discover the latest in sportswear and athletic shoes</p>
        </div>
    </header>

    <!-- Products Section -->
    <section class="products">
        <h2>Featured Products</h2>
        <div class="product-grid">
            <% products.forEach(product => { %>
                <div class="product-card">
                    <img src="<%= product.image %>" alt="<%= product.name %>">
                    <h3><%= product.name %></h3>
                    <p><%= product.description %></p>
                    <span class="price">$<%= product.price %></span>
                    <button class="order-btn" onclick="handleOrder('<%= product.name %>')">Order Now</button>
                </div>
            <% }); %>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>About Adidas</h3>
                <p>We are a global leader in the sporting goods industry with the core brands adidas and Reebok.</p>
            </div>
            <div class="footer-section">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/careers">Careers</a></li>
                    <li><a href="/contact">Contact</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Connect With Us</h3>
                <div class="social-links">
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 Adidas. All rights reserved.</p>
        </div>
    </footer>

    <script>
        function handleOrder(productName) {
            alert(`Order placed for ${productName}! This is a demo alert.`);
        }
    </script>
</body>
</html> 