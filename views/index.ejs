<%- include('layouts/main') %>

<div class="hero bg-dark text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold mb-4">Welcome to Adidas</h1>
                <p class="lead mb-4">Discover our latest collection of premium sportswear and footwear.</p>
                <a href="/products" class="btn btn-primary btn-lg">Shop Now</a>
            </div>
            <div class="col-md-6">
                <img src="/images/hero-image.jpg" alt="Adidas Collection" class="img-fluid rounded">
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Featured Categories -->
    <section class="mb-5">
        <h2 class="text-center mb-4">Featured Categories</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="/images/shoes.jpg" class="card-img-top" alt="Shoes">
                    <div class="card-body">
                        <h5 class="card-title">Shoes</h5>
                        <p class="card-text">Explore our latest collection of athletic and casual footwear.</p>
                        <a href="/products?category=shoes" class="btn btn-outline-primary">View Collection</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="/images/clothing.jpg" class="card-img-top" alt="Clothing">
                    <div class="card-body">
                        <h5 class="card-title">Clothing</h5>
                        <p class="card-text">Discover our premium sportswear and casual clothing line.</p>
                        <a href="/products?category=clothing" class="btn btn-outline-primary">View Collection</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="/images/accessories.jpg" class="card-img-top" alt="Accessories">
                    <div class="card-body">
                        <h5 class="card-title">Accessories</h5>
                        <p class="card-text">Complete your look with our range of sports accessories.</p>
                        <a href="/products?category=accessories" class="btn btn-outline-primary">View Collection</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Latest Products -->
    <section class="mb-5">
        <h2 class="text-center mb-4">Latest Products</h2>
        <div class="row g-4">
            <% products.slice(0, 3).forEach(product => { %>
                <div class="col-md-4">
                    <div class="card product-card h-100">
                        <img src="<%= product.image %>" class="card-img-top product-image" alt="<%= product.name %>">
                        <div class="card-body">
                            <h5 class="card-title product-title"><%= product.name %></h5>
                            <p class="card-text product-description"><%= product.description %></p>
                            <p class="product-price">$<%= product.price.toFixed(2) %></p>
                            <a href="/products/<%= product.id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        <div class="text-center mt-4">
            <a href="/products" class="btn btn-outline-primary">View All Products</a>
        </div>
    </section>

    <!-- Features -->
    <section class="mb-5">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center">
                    <i class="fas fa-truck fa-3x mb-3 text-primary"></i>
                    <h4>Free Shipping</h4>
                    <p>On orders over $50</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="fas fa-undo fa-3x mb-3 text-primary"></i>
                    <h4>Easy Returns</h4>
                    <p>30-day return policy</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="fas fa-lock fa-3x mb-3 text-primary"></i>
                    <h4>Secure Payment</h4>
                    <p>100% secure checkout</p>
                </div>
            </div>
        </div>
    </section>
</div> 